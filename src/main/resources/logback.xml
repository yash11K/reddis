<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS}] [%thread] %highlight(%-5level) [%level] [%logger{20}] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="build.your.own" level="DEBUG" />

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
